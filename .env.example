MULTISIG_SIGNER_2=0x2222222222222222222222222222222222222222222222222222222222222222
MULTISIG_SIGNER_3=0x3333333333333333333333333333333333333333333333333333333333333333

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
MAX_DAILY_VOLUME=500000
ALERT_WEBHOOK_URL=https://alerts.your-app.com/fraud

# Move Package Configuration
TREASURY_PACKAGE_ID=0x...
TREASURY_OBJECT_ID=0x...

# OpenClaw Integration
OPENCLAW_API_URL=https://api.openclaw.dev
OPENCLAW_API_KEY=your_openclaw_api_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/aniki.log

# Development
DEV_MODE=true
MOCK_TRANSACTIONS=true